<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodorderiing">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodOrderiing">
        <activity android:name=".activity.orderDetail.OrderingDetail"></activity>

        <activity android:name=".activity.customer.AddNewCustomerActivity"
            android:theme="@style/Theme.FoodOrderiing.SlidrActivityTheme"/>

        <activity android:name=".activity.ordering.OrderingActivity"
            android:theme="@style/Theme.FoodOrderiing.SlidrActivityTheme"/>

        <activity android:name=".activity.customer.CustomerActivity"
            android:theme="@style/Theme.FoodOrderiing.SlidrActivityTheme"/>

        <activity android:name=".activity.product.AddNewProductActivity" />

        <activity android:name=".activity.grouping.AddNewGroupingActivity"
            android:theme="@style/Theme.FoodOrderiing.SlidrActivityTheme"/>

        <activity android:name=".activity.grouping.GroupingActivity"
            android:theme="@style/Theme.FoodOrderiing.SlidrActivityTheme"/>

        <activity
            android:name=".activity.product.ProductActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.FoodOrderiing.SlidrActivityTheme"/>

        <activity android:name=".activity.home.HomeActivity" />
        <activity android:name=".activity.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>