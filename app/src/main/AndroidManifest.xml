<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodorderiing">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".helper.App"
        android:allowBackup="true"
        android:icon="@drawable/logo00"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo00"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodOrderiing">
        <activity
            android:name=".activity.forgetPass.ForgetPassActivity"
            android:exported="false" />
        <activity
            android:name=".activity.setting.SettingActivity"
            android:exported="false" />
        <activity android:name=".activity.orderDetail.OrderDetail" />
        <activity android:name=".activity.listOrder.ListOrder" />
        <activity
            android:name=".activity.customer.AddNewCustomerActivity"
            android:theme="@style/Theme.FoodOrderiing.SlidrActivityTheme" />
        <activity
            android:name=".activity.order.OrderActivity"
            android:theme="@style/CustomOrderActivity" />
        <activity
            android:name=".activity.customer.CustomerActivity"
            android:theme="@style/Theme.FoodOrderiing.SlidrActivityTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.product.AddNewProductActivity" />
        <activity
            android:name=".activity.grouping.AddNewGroupingActivity"
            android:theme="@style/Theme.FoodOrderiing.SlidrActivityTheme" />
        <activity
            android:name=".activity.grouping.GroupingActivity"
            android:theme="@style/Theme.FoodOrderiing.SlidrActivityTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.product.ProductActivity"
            android:theme="@style/Theme.FoodOrderiing.SlidrActivityTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.home.HomeActivity" />
        <activity
            android:name=".activity.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>