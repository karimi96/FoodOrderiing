<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodOrderiing" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_toolbar</item>
        <item name="colorPrimaryVariant">@color/red_toolbar</item>
        <item name="colorOnPrimary">@color/red_toolbar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#dbdbdb</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/tosi_lite</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

<!--        add to search-->
        <item name="android:textColorSecondary">@color/white_text</item>
        <item name="android:editTextColor">@color/white_text</item>

        <item name="android:direction">left_to_right</item>
        <item name="android:layoutDirection">rtl</item>
    </style>


    <style
        name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">20dp</item>
        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">16dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
    </style>


   <style
       name="CustomRation" parent="Widget.AppCompat.RatingBar.Small">
       <item name="android:maxHeight">26dp</item>
       <item name="android:maxWidth">26dp</item>
   </style>

    
    <style name="DialogAnimationSheet">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom_sheet</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom_sheet</item>
    </style>


    <style name="Theme.FoodOrderiing.SlidrActivityTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>



    <!--for OrderActivity-->
    <style name="CustomOrderActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/red_toolbar</item>
        <item name="android:editTextColor">@color/black</item>

        <item name="android:direction">left_to_right</item>
        <item name="android:layoutDirection">rtl</item>

        <item name="colorPrimary">@color/red_toolbar</item>
        <item name="colorPrimaryVariant">@color/red_toolbar</item>
        <item name="colorOnPrimary">@color/red_toolbar</item>

        <item name="colorSecondary">#dbdbdb</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/tosi_lite</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>



    <style name="MyTimePickerlight2" parent="android:Widget.Material.TimePicker">
<!--        <item name="android:background">@color/whitediff</item>-->
        <item name="android:headerBackground">@color/red_toolbar</item>
        <item name="android:headerTimeTextAppearance">@color/red_toolbar</item>
        <item name="colorOnBackground">@color/red_toolbar</item>
        <item name="colorOnPrimary">@color/red_toolbar</item>
        <item name="colorOnSecondary">@color/red_toolbar</item>
        <item name="android:headerAmPmTextAppearance">@color/red_toolbar</item>
        <item name="android:numbersTextColor">#B7703A</item>
        <item name="android:numbersSelectorColor">@color/red_toolbar</item>
        <item name="android:numbersBackgroundColor">#E79061</item>
        <item name="colorAccent">@color/red_toolbar</item>
        <item name="colorControlNormal">@color/red_toolbar</item>
<!--        <item name="android:backgroundTint">@color/browwndiff</item>-->
    </style>



</resources>