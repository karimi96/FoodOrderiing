<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="5dp"
    android:layout_width="match_parent"
    android:layout_height="210dp">

    <LinearLayout
        android:background="@color/white_text"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/red_toolbar"
            app:cardCornerRadius="8dp"
            android:outlineSpotShadowColor="@color/red_toolbar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:text="در حال انتظار"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white_text"
                android:fontFamily="@font/iran_sans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/red_toolbar"
            android:outlineSpotShadowColor="@color/red_toolbar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:text="در حال اماده سازی"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white_text"
                android:gravity="center"
                android:fontFamily="@font/iran_sans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"

            android:backgroundTint="@color/red_toolbar"
            android:outlineSpotShadowColor="@color/red_toolbar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <TextView
                android:text="در حال ارسال"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white_text"
                android:gravity="center"
                android:fontFamily="@font/iran_sans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:background="@color/white_text"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/red_toolbar"
            android:outlineSpotShadowColor="@color/red_toolbar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <TextView
                android:text="کل"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white_text"
                android:gravity="center"
                android:fontFamily="@font/iran_sans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/red_toolbar"
            android:outlineSpotShadowColor="@color/red_toolbar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <TextView
                android:text="تحویل داده شده"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white_text"
                android:gravity="center"
                android:fontFamily="@font/iran_sans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/red_toolbar"
            android:outlineSpotShadowColor="@color/red_toolbar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <TextView
                android:text="لغو شده"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white_text"
                android:fontFamily="@font/iran_sans"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</LinearLayout>