<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/neumorphCardView1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="8dp"
                android:elevation="5dp">


                <ImageView
                    android:id="@+id/img_back_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/food_toast" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:background="@drawable/design_product_activity"
                       android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/tv_name_food_product"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/iran_sans"
                            android:text="پاستا"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/tosi_lite"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_kind_of_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iran_sans"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:text="ایتالیایی"
                            android:textColor="@color/tosi_lite"
                            android:textSize="9dp"
                            android:layout_below="@id/tv_name_food_product"
                            />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:numStars="6"
                            android:layout_margin="10dp"
                            android:progressBackgroundTint="@color/white_text"
                            android:progressTint="@color/red_toolbar"
                            android:rating="3.3"
                            android:stepSize="0.5"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true" />


                        <TextView
                            android:id="@+id/tv_price_product"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="14dp"
                            android:fontFamily="@font/iran_sans"
                            android:layout_alignParentEnd="true"
                            android:text="T39"
                            android:textColor="@color/tosi_lite"
                            android:textSize="18dp"
                            android:textStyle="bold"/>


                    </RelativeLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

</RelativeLayout>