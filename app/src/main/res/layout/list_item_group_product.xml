<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="50dp"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="10dp"
    android:outlineSpotShadowColor="@color/red_toolbar"
    app:cardBackgroundColor="#d5d5d5"
    app:cardCornerRadius="11dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:id="@+id/linear_g_p"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|center"
        android:background="@drawable/ripple_sheet"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right|center"
            android:layout_marginStart="10dp"
            android:src="@drawable/chicken_leg" />

        <TextView
            android:id="@+id/tv_groupInproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/iran_sans"
            android:text="فست فود"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
