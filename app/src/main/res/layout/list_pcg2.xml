<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="3"
    android:paddingHorizontal="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_product"
        android:outlineSpotShadowColor="@color/red_toolbar"
        android:layout_width="170dp"
        android:layout_weight="1"
        android:background="@drawable/ripple_all"
        android:layout_height="170dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:background="@drawable/ripple_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/pic_product"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="محصولات"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/iran_sans"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="5dp"
                    android:outlineSpotShadowColor="@color/red_toolbar"
                    app:cardBackgroundColor="@color/white_text"
                    >

                    <TextView
                        android:id="@+id/number_of_product"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="780"
                        android:textColor="@color/red_toolbar"
                        android:textStyle="bold"
                        android:fontFamily="@font/iran_sans"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="16dp"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_customer"
        android:outlineSpotShadowColor="@color/red_toolbar"
        android:layout_width="170dp"
        android:layout_weight="1"
        android:layout_height="170dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:background="@drawable/ripple_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/pic_customer"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مشتری"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/iran_sans"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/white_text">

                    <TextView
                        android:id="@+id/number_of_customer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="80"
                        android:textColor="@color/red_toolbar"
                        android:textStyle="bold"
                        android:fontFamily="@font/iran_sans"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="16dp"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_grouping"
        android:outlineSpotShadowColor="@color/red_toolbar"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">


        <LinearLayout
            android:background="@drawable/ripple_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/categories"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="دسته بندی"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/iran_sans"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/white_text">

                    <TextView
                        android:id="@+id/number_of_grouping"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="10"
                        android:textColor="@color/red_toolbar"
                        android:textStyle="bold"
                        android:fontFamily="@font/iran_sans"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="16dp"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>