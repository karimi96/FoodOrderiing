<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_o_d"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="@color/red_toolbar"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ptz" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/card_o_d"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="فست فود"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="89,900"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:layout_marginEnd="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_inCrease"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_all"
            android:padding="4dp"
            android:src="@drawable/ic_red_add_24" />

        <TextView
            android:id="@+id/tv_number_of_order"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/iran_sans"
            android:gravity="center"
            android:text="9"
            android:textColor="#676767"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView

            android:id="@+id/img_diCrease"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_all"
            android:padding="4dp"
            android:src="@drawable/ic_red_remove_24" />


    </LinearLayout>

</RelativeLayout>