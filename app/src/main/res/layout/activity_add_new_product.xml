<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.product.AddNewProductActivity">

    <VideoView
        android:id="@+id/vedio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/ccc"
        android:layout_centerInParent="true"
        app:cardCornerRadius="12dp"
        android:backgroundTint="#aa000000"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:padding="15dp"
                android:src="@drawable/ic_outline_add_a_photo_24"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <LinearLayout
                android:layout_below="@id/img_grouping"
                android:background="@color/white_text"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>



            <EditText
                android:id="@+id/et_get_name_product"
                android:background="@drawable/border_editext_product"
                android:layout_marginHorizontal="20dp"
                android:hint="اسم محصول"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:textStyle="normal"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:fontFamily="@font/iran_sans"
                android:inputType="textPersonName"
                android:drawableRight="@drawable/ic_round_fastfood_24"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

<!--            <EditText-->
<!--                android:background="@drawable/border_editext_product"-->
<!--                android:layout_marginHorizontal="20dp"-->
<!--                android:hint="دسته بندی"-->
<!--                android:padding="5dp"-->
<!--                android:textStyle="normal"-->
<!--                android:fontFamily="@font/iran_sans"-->
<!--                android:inputType="textPersonName"-->
<!--                android:drawablePadding="10dp"-->
<!--                android:textSize="16dp"-->
<!--                android:gravity="right|center_vertical"-->
<!--                style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"-->
<!--                android:drawableRight="@drawable/ic_baseline_category_24"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"/>-->


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_product"
                android:layout_marginTop="20dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/border_spinner"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>



            <EditText
                android:id="@+id/et_get_price_product"
                android:background="@drawable/border_editext_product"
                android:layout_marginHorizontal="20dp"
                android:hint=" قیمت"
                android:padding="5dp"
                android:textStyle="normal"
                android:fontFamily="@font/iran_sans"
                android:inputType="number"
                android:drawablePadding="10dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_baseline_attach_money_24"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>




<!--            <androidx.appcompat.widget.AppCompatSpinner-->
<!--                android:id="@+id/material_spinner1"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="Select Here"-->
<!--                app:met_floatingLabel="normal"-->
<!--                android:textColorHint="#CFD8DC"/>-->



