<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/text11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:text="درباره ما"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/text22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/iran_sans"
            android:text="با تشکر از انتخاب شما برای استفاده از این برنامه!"
            android:textSize="14dp" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/text33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/iran_sans"
            android:text="اگر از این برنامه خوشتان آمد و برایتان مفید بود به این اپلیکیشن ، در مارکتی که از آن دانلود کرده اید نظر و امتیاز دهید."
            android:textSize="14dp" />


        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/text44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/iran_sans"
            android:text="پشتیبانی و راه ارتباطی با برنامه نویس"
            android:textSize="14dp" />

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:fontFamily="@font/iran_sans"-->
        <!--            android:text="bamcooc.ir"-->
        <!--            android:textSize="14dp" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/email"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="?attr/actionBarItemBackground"
                android:src="@drawable/email1" />

            <ImageView
                android:id="@+id/telegram"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="?attr/actionBarItemBackground"
                android:src="@drawable/telegram" />

            <ImageView
                android:id="@+id/instagram"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="?attr/actionBarItemBackground"
                android:src="@drawable/instagram" />

        </LinearLayout>


        <TextView
            android:id="@+id/close_dialog_guid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/iran_sans"
            android:text="بستن"
            android:textColor="@color/red_toolbar"
            android:textSize="14dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>