<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_text"
    tools:context=".activity.ordering.OrderingActivity">



    <LinearLayout
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/background_card_product_withe">

        <TextView
            android:id="@+id/add_to_card"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/ripple_all"
            android:fontFamily="@font/iran_sans"
            android:gravity="center"
            android:padding="10dp"
            android:text="اضافه کردن به کارت"
            android:textColor="#676767" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_inCrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ripple_all"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_add_24" />

            <TextView
                android:id="@+id/tv_number_of_order"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/iran_sans"
                android:gravity="center"
                android:text="9"
                android:textColor="#676767"
                android:textSize="24dp"
                android:textStyle="bold" />

            <ImageView

                android:id="@+id/img_diCrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ripple_all"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_remove_24" />


        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_card_product" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_food_ordring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/iran_sans"
                    android:text="پیتزا چیکن"
                    android:textColor="@color/white_text"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/catagory_ordreing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_food_ordring"
                    android:fontFamily="@font/iran_sans"
                    android:text=" فست فود"
                    android:textColor="@color/white_text"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="1dp"
                    android:layout_below="@id/catagory_ordreing"
                    android:background="@color/white_text" />


                <TextView
                    android:id="@+id/price_ordring"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/iran_sans"
                    android:text="T67"
                    android:textColor="@color/white_text"
                    android:textSize="23dp" />


                <TextView
                    android:id="@+id/time_ordreing"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:drawableRight="@drawable/ic_round_timelapse_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/iran_sans"
                    android:text="20-40"
                    android:textColor="@color/white_text"
                    android:textSize="12dp" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>