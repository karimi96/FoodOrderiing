<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:outlineSpotShadowColor="@color/red_toolbar"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="@color/red_toolbar"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ptz" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="10dp"
        android:outlineSpotShadowColor="@color/red_toolbar"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/iran_sans"
                    android:padding="10dp"
                    android:text="سالاد سزار"
                    android:textColor="#676767"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price_detai1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/irsansfanum"
                    android:gravity="end"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="4dp"
                    android:text="88,999"
                    android:textColor="#676767"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/category_detail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/iran_sans"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="5dp"
                    android:textSize="13dp"
                    android:paddingBottom="10dp"
                    android:text="سالاد"
                    android:textColor="#9c9b9b" />


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="18dp">

                    <TextView
                        android:id="@+id/amount_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/red_toolbar"
                        android:fontFamily="@font/irsansfanum"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="5dp"
                        android:text="10"
                        android:textColor="@color/white_text"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>