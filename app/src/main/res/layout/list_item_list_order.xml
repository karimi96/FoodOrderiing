<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_all"
        android:elevation="1dp"
        android:orientation="vertical"
        android:outlineSpotShadowColor="@color/red_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d3d3d3"
            android:orientation="horizontal"
            android:paddingStart="9dp">

            <TextView
                android:id="@+id/name_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/iran_sans"
                android:gravity="right"
                android:paddingVertical="5dp"
                android:paddingEnd="5dp"
                android:text="رقیه کریمی"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/delete_listOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/border_delete_list_order"
                android:drawableRight="@drawable/delete"
                android:fontFamily="@font/iran_sans"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:text="حذف سفارش"
                android:textColor="#a2a2a2"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:padding="5dp"
                android:text="وضعیت مشتری :"
                android:textColor="#9C9B9B"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/status_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:gravity="right"
                android:paddingVertical="5dp"
                android:paddingEnd="5dp"
                android:text="در حال ارسال"
                android:textColor="#676767" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:padding="5dp"
                android:text="جمع کل :"
                android:textColor="#9c9b9b"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/total_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/irsansfanum"
                android:gravity="right"
                android:paddingVertical="5dp"
                android:paddingEnd="5dp"
                android:text="88,88"
                android:textColor="#676767" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="9dp"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:padding="5dp"
                android:text="توضیحات :"
                android:textColor="#9c9b9b"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/explain_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:gravity="right"
                android:paddingVertical="5dp"
                android:paddingEnd="10dp"
                android:text="توضیحات بیشتر"
                android:textColor="#747474" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white_text" />

        <include layout="@layout/box_listorder" />

    </LinearLayout>

</androidx.cardview.widget.CardView>