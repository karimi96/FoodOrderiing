<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/border_list_order_up"
        android:elevation="1dp"
        android:orientation="vertical"
        android:outlineSpotShadowColor="@color/red_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_name_up"
            android:orientation="horizontal"
            android:paddingStart="9dp"
            android:paddingTop="6dp">


            <TextView
                android:id="@+id/name_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:paddingVertical="5dp"
                android:paddingEnd="5dp"
                android:gravity="right"
                android:layout_marginStart="5dp"
                android:text="رقیه کریمی"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:padding="5dp"
                android:text="وضعیت مشتری :"
                android:textColor="#9C9B9B"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/status_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:paddingVertical="5dp"
                android:paddingEnd="5dp"
                android:gravity="right"
                android:text="در حال ارسال"
                android:textColor="#676767" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:padding="5dp"
                android:text="جمع کل :"
                android:textColor="#9c9b9b"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/total_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/irsansfanum"
                android:paddingVertical="5dp"
                android:paddingEnd="5dp"
                android:gravity="right"
                android:text="88,88"
                android:textColor="#676767" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="9dp"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:padding="5dp"
                android:text="توضیحات :"
                android:textColor="#9c9b9b"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/explain_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:paddingVertical="5dp"
                android:paddingEnd="10dp"
                android:gravity="right"
                android:text="توضیحات بیشتر"
                android:textColor="#747474" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/box_listorder" />

</LinearLayout>